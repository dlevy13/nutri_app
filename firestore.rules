rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ‚úÖ USERS (chaque utilisateur ne peut acc√©der qu'√† son propre document)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // ‚úÖ Sous-collections prot√©g√©es (meals, analyses, strava, etc.)
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // üîí Protection par d√©faut : tout autre acc√®s est refus√©
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
